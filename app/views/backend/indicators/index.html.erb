<section class="content-header">
  <h1>
    市场 <small>指标结果</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="#"><i><img src="<%= image_path('octicons/milestone-24.svg') %>" style="height: 20px;"></i> Dashboard</a></li>
    <li class="active"><i><img src="<%= image_path('octicons/stack-24.svg') %>" style="height: 20px;"></i> 复合指标</li>
  </ol>
</section>
<section class="content">
  <div class="box box-primary">
    <div class="box-header">
      <a href="<%= clear_history_backend_indicators_path %>" class="btn bg-green btn-flat" data-confirm="确定删除历史指标吗？"><i><img src="<%= image_path('octicons/x-24.svg') %>" style="height: 20px;"></i> 清空指标</a>
      <a href="<%= new_backend_indicator_path %>" class="btn bg-primary btn-flat"><i><img src="<%= image_path('octicons/plus-24.svg') %>" style="height: 20px;"></i> 新指标</a>
    </div>
    <div class="box-body">
      <div class="row">
        <div class="col-sm-12">
          <table id="example1" class="table table-bordered table-striped dataTable" role="grid" aria-describedby="example1_info">
            <thead>
            <tr>
              <th tabindex="0" aria-controls="example1" style="text-align: center">时间</th>
              <th tabindex="0" aria-controls="example1" style="text-align: center">市场</th>
              <th tabindex="0" aria-controls="example1" style="text-align: center">指标集</th>
              <th tabindex="0" aria-controls="example1" style="text-align: center">操作</th>
            </tr>
            </thead>
            <tbody>
            <% @indicators.each do |item| %>
              <tr style="text-align: center">
                <td style="width: 200px"><%= item.created_at.to_s(:short) %>
                  &nbsp;&nbsp;
                  <a href="<%= backend_indicator_path(item) %>" data-method="delete" data-confirm="确定删除该指标吗？">
                    <i><img src="<%= image_path('octicons/trash-24.svg') %>" style="height: 18px;"></i>
                  </a>
                </td>
                <td style="text-align: left;width: 220px"><b><%= item.market.full_name %></b></td>
                <td style="text-align: left"><b><%= item.name %></b></td>
                <td>
                  <a href="<%= edit_backend_indicator_path(item) %>" class="btn bg-orange btn-flat">
                    <i><img src="<%= image_path('octicons/tools-24.svg') %>" style="height: 18px;"></i>
                  </a>
                  <a href="<%= backend_indicator_path(item) %>" class="btn bg-red btn-flat" data-method="delete" data-confirm="确定删除吗？">
                    <i><img src="<%= image_path('octicons/trash-24.svg') %>" style="height: 18px;"></i>
                  </a>
                </td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-5">
          <div class="dataTables_info" id="example1_info" role="status" aria-live="polite"><h5>总计：「<%= @indicators.count %>」</h5></div>
        </div>
        <div class="col-sm-12">
          <div class="dataTables_paginate paging_simple_numbers">
          <%= will_paginate @indicators, :class=>'apple_pagination' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>