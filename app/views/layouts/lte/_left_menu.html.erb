<section class="sidebar">
  <div class="user-panel">
    <div class="pull-left image">
      <img src="<%= image_path('octicons/hubot-24.svg')%>" class="img-circle" alt="User Image">
    </div>
    <div class="pull-left info">
      <%= current_user.email %>
    </div>
  </div>
  <form action="#" method="get" class="sidebar-form">
    <div class="input-group">
      <input type="text" name="q" class="form-control" placeholder="Search...">
      <span class="input-group-btn">
        <button type="submit" name="search" id="search-btn" class="btn btn-flat">
          <i><img src="<%= image_path('octicons/search-24.svg') %>"></i>
        </button>
      </span>
    </div>
  </form>
  <ul class="sidebar-menu">
    <li class="header">菜单导航</li>
    <li class="treeview <%= 'active' if controller_name == 'dashboard' && action_name == 'index' %>">
      <a href="<%= backend_quote_path %>" target="_self">
        <i><img src="<%= image_path('octicons/graph-24.svg') %>"></i> <span> 行情趋势</span>
      </a>
    </li>
    <li class="treeview <%= 'active' if controller_name == 'markets' %>">
      <a href="<%= backend_markets_path %>" target="_self">
        <i><img src="<%= image_path('octicons/telescope-24.svg') %>"></i> <span> 交易市场</span>
      </a>
    </li>
    <% if controller_name == 'candles' %>
      <li class="treeview <%= 'active' if controller_name =='candles' %>">
        <a href="<%= backend_market_candles_path(params[:market_id]) %>" target="_self">
          <i><img src="<%= image_path('octicons/paste-24.svg') %>"></i> <span> 历史行情</span>
        </a>
      </li>
    <% end %>
    <li class="treeview <%= 'active' if controller_name == 'regulates' %>">
      <a href="<%= backend_regulates_path %>" target="_self">
        <i><img src="<%= image_path('octicons/law-24.svg') %>"></i> <span> 收益风控</span>
      </a>
    </li>
    <li class="treeview <%= 'active' if controller_name == 'accounts' %>">
      <a href="<%= backend_accounts_path %>" target="_self">
        <i><img src="<%= image_path('octicons/diamond-24.svg') %>"></i> <span> 账户资金</span>
      </a>
    </li>
    <li class="treeview <%= 'active' if controller_name == 'orders' %>">
      <a href="<%= backend_orders_path %>" target="_self">
        <i><img src="<%= image_path('octicons/code-of-conduct-24.svg') %>"></i> <span> 买卖订单</span>
      </a>
    </li>
    <li class="treeview <%= 'active' if controller_name == 'messages' %>">
      <a href="<%= backend_messages_path %>" target="_self">
        <i><img src="<%= image_path('octicons/broadcast-24.svg') %>"></i> <span> 广播信息</span>
      </a>
    </li>
    <li class="treeview <%= 'active' if controller_name == 'indicators' %>">
      <a href="<%= backend_indicators_path %>" target="_self">
        <i><img src="<%= image_path('octicons/stack-24.svg') %>"></i> <span> 复合指标 </span>
      </a>
    </li>
  </ul>
</section>