<section class="sidebar">
  <div class="user-panel">
    <div class="pull-left image">
      <img src="<%= image_path('smile.png')%>" class="img-circle" alt="User Image">
    </div>
    <div class="pull-left info">
      <p><%= current_user.email.split('@')[0] %></p>
      <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
    </div>
  </div>
  <form action="#" method="get" class="sidebar-form">
    <div class="input-group">
      <input type="text" name="q" class="form-control" placeholder="Search...">
      <span class="input-group-btn">
        <button type="submit" name="search" id="search-btn" class="btn btn-flat"><i class="fa fa-search"></i>
        </button>
      </span>
    </div>
  </form>
  <ul class="sidebar-menu">
    <li class="header">菜单导航</li>
    <li class="treeview <%= 'active' if controller_name == 'dashboard' && action_name == 'index' %>">
      <a href="<%= backend_quote_path %>" target="_self">
        <i class="fa fa-line-chart"></i> <span> 行情趋势</span>
      </a>
    </li>
    <li class="treeview <%= 'active' if controller_name == 'markets' %>">
      <a href="<%= backend_markets_path %>" target="_self">
        <i class="fa fa-exchange"></i> <span> 交易市场</span>
      </a>
    </li>
    <% if controller_name == 'candles' %>
      <li class="treeview <%= 'active' if controller_name =='candles' %>">
        <a href="<%= backend_market_candles_path(params[:market_id]) %>" target="_self">
          <i class="fa fa-bar-chart"></i> <span> 历史行情</span>
        </a>
      </li>
    <% end %>
    <li class="treeview <%= 'active' if controller_name == 'regulates' %>">
      <a href="<%= backend_regulates_path %>" target="_self">
        <i class="fa fa-fort-awesome"></i> <span> 收益风控</span>
      </a>
    </li>
    <li class="treeview <%= 'active' if controller_name == 'accounts' %>">
      <a href="<%= backend_accounts_path %>" target="_self">
        <i class="fa fa-google-wallet"></i> <span> 数字钱包</span>
      </a>
    </li>
    <li class="treeview <%= 'active' if controller_name == 'orders' %>">
      <a href="<%= backend_orders_path %>" target="_self">
        <i class="fa fa-envelope-open-o"></i> <span> 买卖订单</span>
      </a>
    </li>
    <li class="treeview <%= 'active' if controller_name == 'messages' %>">
      <a href="<%= backend_messages_path %>" target="_self">
        <i class="fa fa-commenting-o"></i> <span> 通知信息</span>
      </a>
    </li>
    <li class="treeview <%= 'active' if controller_name == 'indicators' %>">
      <a href="<%= backend_indicators_path %>" target="_self">
        <i class="fa fa-bar-chart-o"></i> <span> 复合指标 </span>
      </a>
    </li>
    <li class="header">设置管理</li>
    <li class="treeview <%= 'active' if controller_name == 'dashboard' && action_name == 'daemons' %>">
      <a href="<%= backend_daemons_path %>" target="_self">
        <i class="fa fa-wheelchair-alt"></i> <span>  任务进程</span>
      </a>
    </li>
  </ul>
</section>